@model List<TypeBoat>


<div class="container">
    <div class="row" pt-4>
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-light">
                <i class="bi bi-plus-circle"></i> Create new category
            </a>
        </div>
    </div>
</div>
<table class="table table-boarded table-striped">
    <thead>
    <tr>
        <th>
            Category Name
        </th>
        <th>
            Display Order
        </th>
    </tr>

    </thead>
    <tbody>
    @foreach (var category in Model)
    {
        <tr>
            <th>
                @category.Name
            </th>
            <th>
                @category.DisplayOrder
            </th>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Category" asp-action="Edit" asp-route-categoryId="@category.Id" class="btn btn-secondary mx-2">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-categoryId="@category.Id" class="btn btn-danger mx-2">
                        <i class="bi bi-trash"></i>
                    </a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>